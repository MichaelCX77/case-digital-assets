# Application port and environment
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# JWT Authentication Settings
JWT_SECRET=my-jwt-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=my-refresh-jwt-secret
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=my-api
JWT_AUDIENCE=my-clients

# Rate limit settings
RATE_LIMIT_WINDOW_MS=900000           # 15 minutes in milliseconds
RATE_LIMIT_MAX=100                    # max requests per window per IP
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Swagger documentation settings
SWAGGER_TITLE=Banking Management API
SWAGGER_DESCRIPTION=API documentation for the Case Digital Assets project
SWAGGER_VERSION=1.0
SWAGGER_PATH=api

# CORS settings
CORS_ORIGIN=http://localhost:3000,https://meusite.com
CORS_METHODS=GET,POST,PUT,PATCH,DELETE
CORS_CREDENTIALS=true