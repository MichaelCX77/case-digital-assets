// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./clientes.db"
}

generator client {
  provider = "prisma-client-js"
}

model Cliente {
  id         Int      @id @default(autoincrement())
  nome       String
  email      String   @unique
  contas     ContaCliente[]
}

model ContaCliente {
  idConta   Int
  idCliente Int
  cliente   Cliente @relation(fields: [idCliente], references: [id])
  @@id([idConta, idCliente])
}
